<div class="row">
  <div class="col-12 offset-md-2 col-md-8 chat-heading">
    <h4><%= "#{@boardroom.article.title} Part.#{@boardroom.id}" %></h4>
    <input type="text" data-behavior="boardroom_speaker" data-user="<%= current_user.id %>" data-boardroom="<%= @boardroom.id %>">
  </div>

  <div class="col-12 offset-md-2 col-md-8 chat-room">
    <div id="chats" class="chat-content">
      <%= render partial: "chat", collection: @chats %>
    </div>
  </div>
</div>
