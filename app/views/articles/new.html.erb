<h4>新規投稿</h4>
<%= form_with(model: @article, local: true) do |f| %>
  <div class="article-new-field">
    <%= f.label :category, 'カテゴリ' %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    <% end %>
  </div>
  <div class="article-new-field">
    <%= f.text_field :title, class: 'title-box', placeholder: ' タイトルを追加' %>
  </div>
  <div class="article-new-field">
    <%= f.text_area :content, class: 'content-box', placeholder: ' 本文を入力', rows: 15 %>
  </div>
  <div class="article-new-field">
    <%= f.text_field :image_description, class: 'image_description-box', placeholder: '画像の説明を入力' %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="image　article-new-field">
    <%= f.file_field :image, accept: "image/jpeg, image/png" %>
  </span>
<% end %>

<script type="text/javascript">
  $("#article_image").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert("Maximum file size is 3MB. Please choose a smaller file.");
      $("#article_image").val("");
    }
  });
</script>
