<h2>新規投稿</h2>
<%= form_with(model: @article, local: true) do |f| %>
  <div class="article-new-field">
    <%= f.text_field :title, class: 'title-box', placeholder: ' タイトルを追加' %>
  </div>
  <div class="article-new-field">
    <%= f.text_area :content, class: 'content-box', placeholder: ' 本文を入力', rows: 15 %>
  </div>
  <div class="article-new-field">
    <%= f.label :category, 'カテゴリ' %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    <% end %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
