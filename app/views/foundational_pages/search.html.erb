<div class="row search-box">
  <div class="form-group col-12 col-md-8 offset-md-2">
    <%= form_with(url: results_path, method: :get, local: true) do |f| %>
      <%= f.label :category, 'カテゴリー検索', class: 'search-label' %>
      <%= f.collection_radio_buttons :category, Category.all, :id, :name, class: "form-control search-radio" %>
      <%= f.label :search, 'タイトルで検索', class: 'search-label' %>
      <%= f.text_field :search, class: "form-control search-text form-inline", size: 25 %>
      <%= f.submit "検索", class: "btn btn-search form-control" %>
    <% end %>
  </div>
</div>
